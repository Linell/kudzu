<article class="column">
  <h2>Latest Articles</h2>
  <ul>
    <%= for article <- @latest_articles do %>
      <li>
        <%= link(article.title, to: Routes.article_path(@conn, :show, article)) %>
        - <%= link(article.source, to: article.url, target: :_blank) %>
        @ <%= Timex.format!(Timex.local(article.published_date), "{M}/{D} - {h12}:{0m}{am}") %>
      </li>
    <% end %>
  </ul>
</article>
